<head>
  {# critical metadata #}
  <meta charset='utf-8'>
  <meta name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no'>
  <title>Daniel W. Hieber | {{ title }}</title>

  {# metadata #}
  <meta name='author' content='{{ pkg.author.name }}'>
  <meta name='description' content='{{ description }}'>
  <meta name='rating' content='general'>

  {# linked metadata #}
  <link rel='author' href='https://danielhieber.info'>
  <link rel='license' href='https://github.com/dwhieb/danielhieber.info/#license'>

  {# open graph tags #}
  <meta property='og:description' content='{{ description }}'>
  <meta property='og:image' content='https://danielhieber.info/images/social.jpg'>
  <meta property='og:image:alt' content='Headshot of Daniel Hieber'>
  <meta property='og:image:height' content='1080'>
  <meta property='og:image:type' content='image/jpeg'>
  <meta property='og:image:width' content='1080'>
  <meta property='og:site_name' content='Daniel W. Hieber'>
  <meta property='og:title' content='Daniel W. Hieber | {{ title }}'>
  <meta property='og:type' content='website'>
  <meta property='og:url' content='https://danielhieber.info{{ page.url }}'>
  <meta name='twitter:card' content='summary'>
  <meta name='twitter:creator' content='@dwhieb'>
  <meta name='twitter:site' content='@dwhieb'>

  {# favicon #}
  <link rel='icon' href='favicon.svg' type='image/svg+xml'>

  {# CSS for main layout #}
  {% set less %}
    {% include '../index.less' %}
  {% endset %}

  {# preload critical fonts #}
  <link rel='preload' href='fonts/FiraSans/FiraSans-Regular.woff2' as='font' type='font/woff2' crossorigin>
  <link rel='preload' href='fonts/FiraSans/FiraSans-Bold.woff2' as='font' type='font/woff2' crossorigin>
  <link rel='preload' href='fonts/FiraSans/FiraSans-Italic.woff2' as='font' type='font/woff2' crossorigin>
  <link rel='preload' href='fonts/Libertinus/LibertinusSerif-Regular.woff2' as='font' type='font/woff2' crossorigin>

  <style>
    {{ less | css | safe }}
  </style>

</head>